
@model IEnumerable<ProductBrand>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Brands</h1>
<partial name="CreatePartialView" model="new ProductBrand()"></partial>
@if(Model.Count()>0)
{
    <table class="table table-striped table-hover">
        <thead>
            <th>Id</th>
            <th>Name</th>
            <th>Actions</th>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>
                        <div>
                            <a class="btn btn-outline-danger"  asp-action="Delete" asp-route-id="@item.Id">Delete<i class="fas fa-trash"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>

    </table>
}else
{
<div class="alert-warning">
    <h2>No Data</h2>
</div>
}

@section Scripts
    {
    <partial name="_ValidationScriptsPartial" />
}