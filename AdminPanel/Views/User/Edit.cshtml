@model UserRoleViewModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit User</h1>
<hr/>
<div class="container">
<form method="post" asp-action="Edit">
    <div class="form-group">
        <input asp-for="UserId" class="form-Control" hidden></input>
        <div>
         <label asp-for="UserName" class="form-label" disabled></label>
         <input asp-for="UserName" class="form-control" disabled></input>
        </div>
    </div>

    <h2>Manage User Roles</h2>
    @for (int i = 0; i < Model.Roles.Count; i++)
    {
        <div >
            <input asp-for="@Model.Roles[i].Name" hidden></input>
            <input asp-for="@Model.Roles[i].IsSelected" class="form-check-input"></input>
            <label asp-for="@Model.Roles[i]" class="form-check-label">@Model.Roles[i].Name</label>
        </div>
    }
    <br/>
    <input type="submit" value="Save" class="btn btn-primary"></input>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>
</div>