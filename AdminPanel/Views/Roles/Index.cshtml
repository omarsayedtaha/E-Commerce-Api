@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "Index";
}

<h1>Roles</h1>
<partial name="RoleForm" model="new RoleFormViewModel()"/>
<hr/>
@if (Model.Count()>0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(r=>r.Id) </th>
                <th>@Html.DisplayNameFor(r=>r.Name) </th>
                <th>Actions </th>
            </tr>
        </thead>
        <tbody>
           @foreach (var item in Model)
            {   <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>
                <a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                <a class="btn btn-outline-warning" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
                </tr>
            }   
        </tbody>
    </table>
}
else
{
    <div class="alert-danger">
        <h2>There is no Records</h2>
    </div>
}
@section Scripts
{
    <partial name="_ValidationScriptsPartial"/>
}

